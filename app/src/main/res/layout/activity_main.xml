<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/activi">

    <TextView
        android:id="@+id/johnn"
        android:fontFamily="@font/aclonica"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_marginTop="-80dp"
        android:text="Fitness Application TCS "
        android:elevation="5dp"
        android:textSize="20sp"
        android:layout_alignTop="@+id/imageView">
    </TextView>
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginTop="140dp"
        app:srcCompat="@drawable/heart" />

    <TextView
        android:id="@+id/walk"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="-2dp"
        android:layout_marginTop="21dp"
        android:text="95"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp"></TextView>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_marginStart="111dp"
        android:layout_marginTop="140dp"
        android:layout_toEndOf="@+id/imageView"
        app:srcCompat="@drawable/footstep" />

    <TextView
        android:id="@+id/heart"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_alignParentRight="true"
        android:layout_marginStart="111dp"
        android:layout_marginTop="20sp"
        android:layout_toEndOf="@+id/walk"
        android:gravity="center"
        android:text="Total Steps"
        android:textColor="#000000"
        android:textSize="20sp"></TextView>
    <ImageView
        android:id="@+id/kilo"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_below="@id/walk"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/kilomet"/>

    <TextView
        android:id="@+id/Kilometers"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/kilo"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:textSize="20sp"
        android:gravity="center"
        android:text="3.5"/>
    <Button
        android:id="@+id/addbtn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Kilometers"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_shape"
        android:gravity="center"
        android:textColor="#ff000000"
        android:layout_centerHorizontal="true"
        android:text="Add Medical Records"
        android:textSize="20sp">
    </Button>

    <com.ismaeldivita.chipnavigation.ChipNavigationBar
        android:id="@+id/bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cnb_menuResource="@menu/menu"
        android:layout_alignParentBottom="true"
        android:background="@drawable/corners"
        app:cnb_radius="8dp"
        app:cnb_orientationMode="horizontal"
        android:layout_margin="5dp"
        android:elevation="8dp"/>




</RelativeLayout>